<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-lg-8 offset-lg-2">
    <h3>Edit Your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          class="form-control"
          name="listing[title]"
          value="<%= listing.title %>"
          required
        />
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          class="form-control"
          name="listing[description]"
          rows="4"
          required
        >
          <%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>

      <div class="mb-3">
        <p>Current Listing Images</p>
        <% if (listing.images.length > 0) { %>
          <% listing.images.forEach(image => { %>
            <img
              src="<%= image.url %>"
              alt="Listing Image"
              width="250"
              height="150"
              class="img-thumbnail mb-2"
            />
          <% }); %>
        <% } else { %>
          <img
            src="https://via.placeholder.com/500x500"
            alt="No images available"
            width="250"
            height="150"
            class="img-thumbnail"
          />
        <% } %>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          type="file"
          id="image"
          class="form-control"
          name="listing[images]"
          multiple
          accept="image/*"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            class="form-control"
            required
            min="0"
            step="0.01"
          />
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country name.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>

      <!-- Category Dropdown -->
      <div class="mb-3">
        <label for="category" class="form-label fw-bold">Category</label>
        <select
          name="listing[category]"
          class="form-control shadow-sm"
          required
        >
          <option value="Beachfront" <% if(listing.category === 'Beachfront') { %> selected <% } %>>Beachfront</option>
          <option value="Cabins" <% if(listing.category === 'Cabins') { %> selected <% } %>>Cabins</option>
          <option value="OMG" <% if(listing.category === 'OMG') { %> selected <% } %>>OMG</option>
          <option value="Lake" <% if(listing.category === 'Lake') { %> selected <% } %>>Lake</option>
          <option value="Design" <% if(listing.category === 'Design') { %> selected <% } %>>Design</option>
          <option value="Amazing Pools" <% if(listing.category === 'Amazing Pools') { %> selected <% } %>>Amazing Pools</option>
          <option value="Farms" <% if(listing.category === 'Farms') { %> selected <% } %>>Farms</option>
          <option value="Amazing Views" <% if(listing.category === 'Amazing Views') { %> selected <% } %>>Amazing Views</option>
          <option value="Rooms" <% if(listing.category === 'Rooms') { %> selected <% } %>>Rooms</option>
          <option value="Lakefront" <% if(listing.category === 'Lakefront') { %> selected <% } %>>Lakefront</option>
          <option value="Tiny Homes" <% if(listing.category === 'Tiny Homes') { %> selected <% } %>>Tiny Homes</option>
          <option value="Countryside" <% if(listing.category === 'Countryside') { %> selected <% } %>>Countryside</option>
          <option value="Treehouse" <% if(listing.category === 'Treehouse') { %> selected <% } %>>Treehouse</option>
          <option value="Trending" <% if(listing.category === 'Trending') { %> selected <% } %>>Trending</option>
          <option value="Tropical" <% if(listing.category === 'Tropical') { %> selected <% } %>>Tropical</option>
          <option value="National Parks" <% if(listing.category === 'National Parks') { %> selected <% } %>>National Parks</option>
          <option value="Castles" <% if(listing.category === 'Castles') { %> selected <% } %>>Castles</option>
          <option value="Camping" <% if(listing.category === 'Camping') { %> selected <% } %>>Camping</option>
          <option value="Top Of The World" <% if(listing.category === 'Top Of The World') { %> selected <% } %>>Top Of The World</option>
          <option value="Luxe" <% if(listing.category === 'Luxe') { %> selected <% } %>>Luxe</option>
          <option value="Iconic Cities" <% if(listing.category === 'Iconic Cities') { %> selected <% } %>>Iconic Cities</option>
          <option value="Earth Homes" <% if(listing.category === 'Earth Homes') { %> selected <% } %>>Earth Homes</option>
        </select>
        <div class="invalid-feedback">Please select a category.</div>
      </div>

      <button type="submit" class="btn col-lg-8 offset-lg-2 btn-dark edit-btn mb-5">Save</button>
    </form>
  </div>
</div>
