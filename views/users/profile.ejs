<style>

  /* Profile Card */
  .profile-card {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background: #fff;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    border-radius: 15px;
    padding: 20px 50px;
    gap: 20px;
    position: relative;
    margin-bottom: 20px;
  }

  .container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 25px 5px;
    position: relative;
  }

 /* Profile Avatar Wrapper - Adjust to Position Half Over the Card */
.profile-avatar-wrapper {
  position: absolute;
  top: -75px; /* Moves the image upward */
  left: 50%; /* Centers the image horizontally */
  transform: translateX(-50%);
  z-index: 10;
}

/* Profile Avatar - Circular with Shadow */
.profile-avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 5px solid #fe424d;
  object-fit: cover;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

  .profile-info {
    flex: 1;
  }

  .profile-info h2 {
    margin: 0;
    font-size: 1.8rem;
    color: #333;
  }

  .profile-info p {
    color: #777;
    margin: 5px 0;
  }

  .edit-btn {
    position: absolute;
    top: 20px;
    right: 25px;
    padding: 8px 16px;
    border: none;
    border-radius: 20px;
    background-color: #fe424d;
    color: white;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
    z-index: 12;
  }
  
  .edit-btn:hover {
    background-color: #ff6f75;
    opacity: 0.9;
  }

  .social-links a {
    font-size: 1rem;
    text-decoration: none;
    color: #fe424d;
    margin-right: 15px;
    transition: transform 0.3s ease;
}

.social-links a i {
    border-radius: 50%;
    transition: transform 0.3s ease;
}

.social-links a i:hover {
    margin-right: 5px;
    transform: scale(1.8);
}


  /* Tabs */
  .tabs {
    display: flex;
    flex-wrap: wrap;
    border-bottom: 2px solid #ddd;
    margin-bottom: 20px;
    gap: 10px;
  }

  .tab {
    flex: 1 1 200px;
    text-align: center;
    padding: 10px;
    cursor: pointer;
    font-weight: bold;
    transition: color 0.3s ease, background-color 0.3s ease;
  }

  .tab.active {
    color: #fe424d;
    border-bottom: 2px solid #fe424d;
  }

  .tab:hover {
    background-color: #f9f9f9;
  }

  /* Tab Content */
  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  /* List Item Style */
  .list-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    margin: 10px 0;
    background: #f9f9f9;
    border-radius: 10px;
    transition: box-shadow 0.3s ease;
  }

  .list-item:hover {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .list-item img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  /* Achievements */
  .achievement {
    text-align: center;
  }

  .achievement img {
    width: 80px;
    margin-bottom: 10px;
  }

 /* Custom Styling for Counter Section */
.custom-counter {
  background: linear-gradient(135deg, #f6d365, #fda085);
  padding: 20px 15px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Styling for Each Counter Box */
.custom-count-data {  
  background-color: #fff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.custom-count-data:hover {
  transform: translateY(-10px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.custom-count-data .custom-count {
  font-size: 48px;
  font-weight: 700;
  color: #ff6f61;
  animation: fadeInUp 1s ease-out;
}

.custom-count-data p {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-top: 10px;
}

/* Row layout adjustments */
.custom-counter-row {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 30px;
}

/* Ensure the columns take up 4 in a row on large screens */
.custom-count-column {
  flex: 1;
  text-align: center;
}


/* Animation for Counter Numbers */
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

  /* Responsive Design */
  @media (max-width: 768px) {
    .profile-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .tabs {
      flex-direction: column;
    }

    .tab {
      flex: 1;
    }

    .count-data {
      padding: 15px;
    }
  
    .count {
      font-size: 36px;
    }
  }

/* About Me 
---------------------*/
.about-text h3 {
  font-size: 45px;
  font-weight: 700;
  margin: 0 0 6px;
}
@media (max-width: 767px) {
