<% layout("/layouts/boilerplate") %>

<div
  style="
    max-width: 1100px;
    margin: auto;
    padding: 50px 20px;
    font-family: Arial, sans-serif;
    color: #213343;
  "
>
  <!-- Hero Section -->
  <div
    style="
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
    "
  >
    <!-- Left Content -->
    <div style="flex: 1; min-width: 350px; padding-right: 40px">
      <h1 style="color: #213343; font-size: 36px; font-weight: bold">
        Contact Us About Our Services
      </h1>
      <p style="font-size: 18px; color: #4b5d67">
        We’d love to show you how we can help grow your business. Reach out to
        our team today!
      </p>
    </div>

    <!-- Right Image -->
    <div style="flex: 1; min-width: 350px">
      <img
        src="/uploads/contact.jpg"
        alt="Contact Us"
        style="
          width: 100%;
          border-radius: 10px;
          background-position: center;
          background-size: cover;
        "
      />
    </div>
  </div>

  <!-- Contact Options -->
  <div
    style="
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 50px;
      margin-bottom: 50px;
      gap: 20px;
      text-align: center;
    "
  >
    <div
      style="
        flex: 1;
        min-width: 250px;
        max-width: 300px;
        max-height: 130px;
        padding: 30px;
        background: #f5f8fa;
        border-radius: 10px;
      "
    >
      <h3 style="color: #213343">📞 Call Us</h3>
      <p style="font-size: 16px; color: #4b5d67">+44 20 3514 0663</p>
    </div>

    <div
      style="
        flex: 1;
        min-width: 250px;
        max-width: 300px;
        max-height: 130px;
        padding: 30px;
        background: #f5f8fa;
        border-radius: 10px;
      "
    >
      <h3 style="color: #213343">📩 Mail Us</h3>
      <a href="mailto:support@heavenstay.com">support@heavenstay.com</a>
    </div>

    <div
      style="
        flex: 1;
        min-width: 250px;
        max-width: 300px;
        max-height: 130px;
        padding: 30px;
        background: #f5f8fa;
        border-radius: 10px;
      "
    >
      <h3 style="color: #213343">📍 Headquarter</h3>
      <p>123 Vacation St., Dream City, Country</p>
    </div>
  </div>

  <!-- Contact Form -->
  <div
    style="
      margin-top: 50px;
      max-width: 1000px;
      margin: auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    "
  >
    <h2
      style="
        color: #213343;
        font-size: 28px;
        text-align: center;
        margin-bottom: 20px;
      "
    >
      📩 Get In Touch
    </h2>

    <% if (messages.success && messages.success.length > 0) { %>
    <div
      style="
        background-color: #d4edda;
        color: #155724;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        text-align: center;
      "
    >
      <%= messages.success %>
    </div>
    <% } %> 
    <% if (messages.error && messages.error.length > 0) { %>
    <div
      style="
        background-color: #f8d7da;
        color: #721c24;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        text-align: center;
      "
    >
      <%= messages.error[0] %>
    </div>
    <% } %>

    <form
      action="/send-message"
      method="POST"
      style="display: flex; flex-direction: column; gap: 15px"
    >
      <div style="position: relative">
        <input
          type="text"
          name="name"
          placeholder="Your Name"
          required
          style="
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
            transition: border 0.3s;
          "
        />
      </div>

      <div style="position: relative">
        <input
          type="email"
          name="email"
          placeholder="Your Email"
          required
          style="
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
            transition: border 0.3s;
          "
        />
      </div>

      <div style="position: relative">
        <textarea
          name="message"
          placeholder="Your Message"
          rows="5"
          required
          style="
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
            transition: border 0.3s;
          "
        ></textarea>
      </div>

      <button
        type="submit"
        style="
          background: linear-gradient(135deg, #d83c46, #d83c46);
          color: white;
          padding: 14px;
          border: none;
          border-radius: 8px;
          font-size: 18px;
          cursor: pointer;
          font-weight: bold;
          transition: background 0.3s;
        "
      >
        ✉️ Send Message
      </button>
    </form>
  </div>
</div>
