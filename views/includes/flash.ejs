<style>
/* General Toast Style */
.toast-message {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 10px 20px;
  min-width: 300px;
  max-width: 500px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
  font-size: 16px;
  color: #333;
  z-index: 1050;
  animation: slideDown 0.4s ease-out, fadeOut 0.5s ease-in 4s forwards;
}

/* Success Toast */
.success-toast {
  border-left: 5px solid #28a745;
}

/* Error Toast */
.error-toast {
  border-left: 5px solid #f44336;
}

/* Icon Style */
.toast-icon {
  margin-right: 10px;
  color: #28a745; /* Default success color */
}

.error-toast .toast-icon {
  color: #f44336; /* Error color */
}

/* Toast Content */
.toast-content {
  flex: 1;
}

/* Animations */
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translate(-50%, -20px);
  }
  to {
    opacity: 1;
    transform: translate(-50%, 0);
  }
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
    transform: translate(-50%, -20px);
  }
}
</style>


<% if (success && success.length) { %>
  <div class="toast-message success-toast">
    <div class="toast-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 10.97l-3.25-3.25a.75.75 0 1 0-1.06 1.06l3.75 3.75a.75.75 0 0 0 1.06 0l7.25-7.25a.75.75 0 0 0-1.06-1.06L6.97 10.97z"/>
      </svg>
    </div>
    <div class="toast-content"><%= success %></div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="toast-message error-toast">
    <div class="toast-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </div>
    <div class="toast-content"><%= error %></div>
  </div>
<% } %>


<script>
// Auto-hide notifications after 4 seconds
setTimeout(() => {
  document.querySelectorAll('.toast-message').forEach((toast) => {
    toast.style.opacity = '0';
    setTimeout(() => toast.remove(), 400); // Delay to match fade-out animation
  });
}, 4000);
</script>
